<% content_for :title do %>
  Music Education 
  |
  Course
  <%= @course.title %>
  |
  Lesson
  <%= @lesson.title %>
<% end %>


<%= link_to 'Courses', courses_path %>
/
<%= link_to @lesson.course.title, course_path(@lesson.course) %>
/
<%= link_to @lesson.title, course_lesson_path(@course, @lesson) %>

<p>
  Impression: <%= @lesson.user_lessons.where(user: current_user).first.impressions %>
</p>

<div class="row mt-2">
  <div class="col-lg-8">
    <%= render 'lessons/lesson', lesson: @lesson %>
    <p></p>
  </div>
  <div class="col-lg-4">
    <ul class="list-group">
      <li class="list-group-item">
        <%= link_to course_path(@lesson.course) do %>
          <div class="fa fa-graduation-cap"></div>
          <%= @lesson.course.title %>
        <% end %>
        <div class="row"></div>
        <div class="fa fa-spinner"></div>
        <%= number_to_percentage(@course.progress(current_user), precision: 0) %>
      </li>
    </ul>
  </div>
</div>

<% @lessons.each do |lesson| %>
  <% if @lesson.present? && lesson == @lesson %>
    <li class="list-group-item list-group-item-success">
      <%= render 'lessons/lesson_preview', lesson: lesson %>
    </li>
    
    <%#= image_tag @lesson.video_thumbnail %>
    <!--<video controls="true" poster="#{url_for @lesson.video_thumbnail}" width="100%" preload="metadata">-->
    <!--  <source src="<%= rails_blob_url(@lesson.video) %>" type="<%= @lesson.video.content_type %>"></source>-->
    <!--</video>-->
    
  <% else %>
    <li class="list-group-item">
      <%= render 'lessons/lesson_preview', lesson: lesson %>
    </li>
  <% end %>
<% end %>
