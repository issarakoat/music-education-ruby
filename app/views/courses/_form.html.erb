<% # frozen_string_literal: true %>
<%= simple_form_for(@course) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
  <div class="form-inputs">
    <%= f.input :title %>
    <%#= f.label :avatar %>
    <div class="row"></div>
    <% if @course.avatar.attached? %>
      <%= image_tag @course.avatar, width: "200px" %>
      <!--= @course.avatar.content_type
      -->
      <!--= @course.avatar.key
      -->
      <div class="row"></div>
      <%= @course.avatar.filename %>
      <!--= @course.avatar.metadata
      -->
      <!--= @course.avatar.byte_size
      -->
      <!--= @course.avatar.checksum
      -->
    <% end %>
    <div class="row"></div>
    <%#= f.file_field :avatar  %>
    <%= f.input :avatar  %>
    <small>
      <%= f.error :avatar, class: 'text-danger' %>
    </small>
    <div class="row"></div>
    <%#= f.label :description %>
    <%#= f.rich_text_area :description %>
    <%= f.input :description, as: :rich_text_area %>
    <%= f.input :instrument %>
    <%= f.input :genre %>
    <small>
      <%= f.error :description, class: 'text-danger' %>
    </small>
    <%= f.input :language, collection: Course.languages, include_blank: true %>
    <%= f.input :level, collection: Course.levels, include_blank: true %>
    <%= f.input :price %>
    <%= f.input :published %>
  </div>
  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
